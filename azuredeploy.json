{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters":{
        "COMPANY_NAME": {
          "type": "string",
          "defaultValue": "Contoso",
          "metadata": {
            "description": "The Name of the company. The site Title"
          }
        },
        "POWERAPPS_URL": {
              "type": "string",
              "defaultValue": "https://google.com",
              "metadata": {
                "description": "The URL to the web application"
          }
        }
    },
    "variables": {
        "hostingPlanName":"[concat(toLower(parameters('COMPANY_NAME')),'-plan')]",
        "siteName": "[concat(toLower(parameters('COMPANY_NAME')), '-', uniqueString(resourceGroup().id))]",
        "storageName":"[concat(toLower(parameters('COMPANY_NAME')), uniqueString(resourceGroup().id))]",
        "packageURL":"https://github.com/ciellos-dev/IFrameApp/raw/main/package.zip"
    },
    "resources": [
    {
            "apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "accountType": "Standard_LRS"
            }
        },
      {
        "apiVersion": "2015-08-01",
        "name": "[variables('hostingPlanName')]",
        "kind": "functionapp",
        "type": "Microsoft.Web/serverfarms",
        "location": "[resourceGroup().location]",
        "sku": {
         "name": "Y1",
                "tier": "Dynamic",
                "size": "Y1",
                "family": "Y",
                "capacity": 0
        },
        "properties": {
          "name": "[variables('hostingPlanName')]"
        }
      },
      {
        "apiVersion": "2015-08-01",
        "name": "[variables('siteName')]",
        "type": "Microsoft.Web/sites",
        "location": "[resourceGroup().location]",
        "dependsOn": [
          "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
          "[resourceId('Microsoft.Storage/storageAccounts', variables('storageName'))]"
        ],
        "properties": {
          "serverFarmId": "[variables('hostingPlanName')]",
          "siteConfig": {
                    "appSettings": [
                        {
                          "name": "COMPANY_NAME",
                          "value": "[parameters('COMPANY_NAME')]",
                          "slotSetting": false
                        },
                        {
                          "name": "POWERAPPS_URL",
                          "value": "[parameters('POWERAPPS_URL')]",
                          "slotSetting": false
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~1"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageName')), '2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "6.5.0"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[toLower(variables('siteName'))]"
                        }
                    ]
                }
        },
        "resources": [
          {
            "name": "MSDeploy",
            "type": "extensions",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-08-01",
            "dependsOn": [
              "[concat('Microsoft.Web/sites/', variables('siteName'))]"
            ],
            "properties": {
              "packageUri": "[variables('packageURL')]"
            }
          }
        ]
      }
    ]
  }
